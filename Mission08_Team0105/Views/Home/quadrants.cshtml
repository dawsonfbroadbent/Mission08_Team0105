                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning btn-sm border border-dark fw-bold">Edit</a>
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger btn-sm border border-dark fw-bold">Delete</a>
                        </div>
                    </div>
                }
            </div>

            <div class="grid-item row-header">Not Important</div>

            <div class="grid-item">
                <div class="quadrant-title">Quadrant 3</div>
                <div class="quadrant-subtitle">Interruptions<br />Some Phone Calls<br />Some Mail<br />Some Reports</div>

                @foreach (var task in Model.Where(t => t.Quadrant == 3 && !t.Completed))
                {
                    <div class="task-card">
