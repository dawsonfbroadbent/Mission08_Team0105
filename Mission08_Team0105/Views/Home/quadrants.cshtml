                        <div class="d-flex justify-content-end gap-2 mt-2">
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning btn-sm border border-dark fw-bold">Edit</a>
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger btn-sm border border-dark fw-bold">Delete</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>