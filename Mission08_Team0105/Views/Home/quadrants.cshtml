                        </p>
                        <div class="d-flex justify-content-end gap-2 mt-2">
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning btn-sm border border-dark fw-bold">Edit</a>
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger btn-sm border border-dark fw-bold">Delete</a>
                        </div>
                    </div>
                }
            </div>

            <div class="grid-item">
                <div class="quadrant-title">Quadrant 4</div>
                <div class="quadrant-subtitle">Busy Work<br />Some Phone Calls<br />Some Mail<br />Time Wasters</div>

                @foreach (var task in Model.Where(t => t.Quadrant == 4 && !t.Completed))
                {
                    <div class="task-card">
                        <h5>@task.Task1</h5>
                        <p>
                            <strong>Due:</strong> @(task.DueDate?.ToString("MM/dd/yyyy") ?? "None") <br />
